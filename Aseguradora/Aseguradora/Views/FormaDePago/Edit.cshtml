@using Aseguradora.Models
@model  FormaDePagoModel
@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "FormaDePago", FormMethod.Post, new { @id = "FrmEditar" }))
        {
            <div>
                @Html.LabelFor(p => p.IdFormaDePago)
                @Html.TextBoxFor(p => p.IdFormaDePago, new { @class = "form-control", @readOnly = true })
                @Html.ValidationMessage("IdFormaDePago", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.Descripcion)
                @Html.TextBoxFor(p => p.Descripcion, new { @class = "form-control obligatorio" })
                @Html.ValidationMessage("Descripcion", new { @class = "text-danger" })
            </div>
            <br />
            <div style="margin:auto">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                    Aceptar
                </button>
                @Html.ActionLink("Regresar", "Index", "FormaDePago", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Desea guardar los cambios?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div style="padding:1em">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" onclick="Editar()" class="btn btn-info">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Editar() {
        var FrmEditar = document.getElementById("FrmEditar");
        FrmEditar.submit();
    }
</script>