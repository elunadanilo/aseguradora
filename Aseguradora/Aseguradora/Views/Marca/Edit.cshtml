@using Aseguradora.Models
@model  MarcaModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "Marca", FormMethod.Post, new { @id = "FrmEditarMarca" }))
        {
            <div>
                @Html.LabelFor(p => p.IdMarca)
                @Html.TextBoxFor(p => p.IdMarca, new { @class = "form-control", @readOnly = true })
                @Html.ValidationMessage("IdMarca", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.Nombre)
                @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control obligatorio" })
                @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
            </div>
            <br />
            <div style="margin:auto">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                    Aceptar
                </button>
                @Html.ActionLink("Regresar", "Index", "FormaDePago", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Desea guardar los cambios?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div style="padding:1em">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" onclick="Editar()" class="btn btn-info">Aceptar</button>
            </div>
        </div>
    </div>
</div>
<script>
    function Editar() {
        var FrmEditarMarca = document.getElementById("FrmEditarMarca");
        FrmEditarMarca.submit();
    }
</script>